{
  "editor.quickSuggestions": {
    "strings": "on"
  },

  "files.associations": {
    "*.css": "tailwindcss"
  },

  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "markdown": "html"
  },

  "tailwindCSS.experimental.classRegex": [
    ["ui:\\s*{([^)]*)\\s*}", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["/\\*\\s?ui\\s?\\*/\\s*{([^;]*)}", ":\\s*[\"'`]([^\"'`]*).*?[\"'`]"]
  ],

  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "ui",
    "active-class",
    "inactive-class"
  ],
}
